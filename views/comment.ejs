<body>
  <h1> How would you rate Skincare? </h1>
  <h4>Leave your comment below</h4>

  <div class="container pt-5">
    <div class="container">
      <form action="/users/comment" method="POST">
        <div class="form-group">
          <label>

            <input type="name" class="form-control" placeholder="Subject" aria-label="First name" name="name" />
            <br />
          </label>
          <textarea class="form-control rounded-0" placeholder="Leave a comment here" rows="4" name="title"></textarea>
        </div>
        <div class="form-group pt-2">
          <button type="submit" class="btn btn-dark ">Add Comments</button>
        </div>
      </form>
    </div>
  </div>
  <br />

  <div class="contaner pt-5">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <% findallcomment.forEach(comment => { %>
          <br>
          <p><strong><%= comment.name %>:
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
            </strong>
            <br />
            <%= comment.title %>
            <!-- <br/> <br/> <br/>
          <i class="fa fa-thumbs-down">0</i>
          <i class="fa fa-thumbs-up">0</i> -->

            <% }) %>
            <br /> <br /> <br />
            <i class="fa fa-thumbs-down">0</i>
            <i class="fa fa-thumbs-up">0</i>
          </p>
        </div>

</body>

