<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('partials/loginHead') -%>
</head>

<body>
	<br><br><br><br>
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="#" class="active" id="login-form-link">Reset Your Password</a>
							</div>
							<div class="col-xs-6">
								<!-- <a href="#" id="register-form-link">Register</a> -->
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login-form" action="/users/reset-password" method="POST" role="form"
									style="display: block;">
									<div class="form-group">
										<input type="text" name="username" id="username" tabindex="1"
											class="form-control" placeholder="Username" value="">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2"
											class="form-control" placeholder="Password">
									</div>
									<div class="form-group text-center">
										<label for="remember"> Don't have an account?</label>
										<a href="/register" class="button">Register</a>
									</div>
                                    <div class="form-group text-center">
										<label for="remember"> Already have an account?</label>
										<a href="/login" class="button">Log In</a>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit"
													tabindex="4" class="form-control btn btn-login"
													value="Reset Password">
											</div>
										</div>
									</div>

								</form>
							</div>
						</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
	</div>
